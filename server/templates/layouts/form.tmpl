{{define "form"}}      
  <div class="jumbotron">
    <h1>Welcome to Tweetpost</h1>
    <p class="lead">Split your long posts into tweet-size and tweet them from your mobile, tablet or Desktop</p>

    <form class="form-horizontal" id="form" action="post" method="POST">
      <div class="form-group form-group-lg">
        <textarea class="form-control" rows=5 placeholder="Write your tweet here ..." name="text"> </textarea>
      </div>
      <div class="form-group form-group-lg">
        <button class="btn btn-lg btn-success" id="split" type="submit">Split</button>
      </div>
    </form>
  </div>
{{end}}
